programa
{
	funcao inicio()
	{
		inteiro l1, l2, l3
		logico equilatero, escaleno, tri
		escreva("Type a value to 3 triangle sides size: ")
		leia(l1, l2, l3)
		equilatero = (l1 == l2) e (l2 == l3)
		escaleno = (l1 <> l2) e (l2 <> l3) e (l1 <> l3)
		tri = (l1 < l2 + l3) e (l2 < l3 + l1) e (l3 < l1 + l2)
		limpa()
		escreva("Is it possible to make a triangle? ", tri,"\nThe triangle is equilateral? ", equilatero, "\nis scalene? ", escaleno)
	}
}
